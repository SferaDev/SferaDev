{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"**/*.json",
			"!**/generated",
			"!packages/cloudflare-api",
			"!packages/dhis2-openapi",
			"!packages/keycloak-api",
			"!packages/litellm-api",
			"!packages/netlify-api",
			"!packages/nuki-api-js",
			"!packages/zoom-api-js",
			"!packages/vercel-api-js",
			"!packages/v0-api",
			"!packages/openapi-utils",
			"!apps/openapi"
		],
		"maxSize": 5242880
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
