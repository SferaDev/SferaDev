{
	"name": "@sferadev/monorepo",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"generate": "turbo run generate",
		"check": "biome check . && knip --config configs/knip.json && turbo run is-tree-shakable --filter='./packages/*'",
		"check:fix": "biome check . --write",
		"tsc": "turbo run tsc",
		"test": "turbo run test",
		"knip": "knip --config configs/knip.json",
		"clean": "turbo run clean && rm -rf node_modules",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "./scripts/release.sh"
	},
	"devDependencies": {
		"@ai-sdk/openai": "catalog:",
		"@biomejs/biome": "catalog:",
		"@changesets/cli": "catalog:",
